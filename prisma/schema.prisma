generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Habit {
    id             String         @id @default(cuid())
    task           String         @db.VarChar(255)
    amount         Int
    frecuency      Frecuency
    sharingOptions SharingOptions
    userId         String

    @@index([userId])
}

enum Frecuency {
    YEAR
    WEEK
    DAY
}

enum SharingOptions {
    PRIVATE
    FRIENDS
}
